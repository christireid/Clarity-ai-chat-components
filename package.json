{
  "name": "clarity-chat",
  "version": "0.1.0",
  "private": true,
  "description": "Premium AI Chat Component Library by Code & Clarity",
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "packages/*",
    "apps/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "npx turbo run dev",
    "build": "npx turbo run build",
    "lint": "npx turbo run lint",
    "lint:fix": "npx turbo run lint -- --fix",
    "test": "npx turbo run test",
    "test:watch": "npx turbo run test -- --watch",
    "test:coverage": "npx turbo run test -- --coverage",
    "clean": "npx turbo run clean && rm -rf node_modules",
    "storybook": "npm run dev --workspace=@clarity-chat/storybook",
    "storybook:build": "npm run build --workspace=@clarity-chat/storybook",
    "docs": "npm run dev --workspace=@clarity-chat/docs",
    "docs:build": "npm run build --workspace=@clarity-chat/docs",
    "typecheck": "npx turbo run typecheck",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "npx turbo run build && changeset publish",
    "size": "size-limit",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@changesets/changelog-github": "^0.5.0",
    "@size-limit/preset-big-lib": "^11.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.4.0",
    "size-limit": "^11.0.1",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/christireid/Clarity-ai-chat-components.git"
  },
  "keywords": [
    "react",
    "chat",
    "ai",
    "chatbot",
    "ui",
    "components",
    "typescript",
    "openai",
    "gpt",
    "claude",
    "streaming",
    "accessibility",
    "wcag"
  ],
  "author": "Christi Reid <christi@codeclarity.ai>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/christireid/Clarity-ai-chat-components/issues"
  },
  "homepage": "https://github.com/christireid/Clarity-ai-chat-components#readme"
}
