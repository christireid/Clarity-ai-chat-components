{
  "name": "@clarity-chat/primitives",
  "version": "0.1.0",
  "description": "Core primitive components for Clarity Chat",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx",
    "size": "size-limit"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@size-limit/preset-small-lib": "^11.0.0",
    "size-limit": "^11.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.3"
  },
  "size-limit": [
    {
      "name": "Full Bundle (ESM)",
      "path": "dist/index.mjs",
      "limit": "15 KB",
      "gzip": true
    },
    {
      "name": "Single Component (Button)",
      "path": "dist/index.mjs",
      "import": "{ Button }",
      "limit": "3 KB",
      "gzip": true
    }
  ]
}
