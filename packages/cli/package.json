{
  "name": "@clarity-chat/cli",
  "version": "0.1.0",
  "description": "Beautiful CLI for Clarity Chat - Developer productivity toolkit",
  "type": "module",
  "bin": {
    "clarity-chat": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --dts --clean",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "clarity-chat",
    "cli",
    "ai",
    "developer-tools",
    "component-library"
  ],
  "dependencies": {
    "ink": "^5.0.0",
    "ink-gradient": "^3.0.0",
    "ink-spinner": "^5.0.0",
    "ink-select-input": "^6.0.0",
    "ink-text-input": "^6.0.0",
    "chalk": "^5.3.0",
    "gradient-string": "^2.0.2",
    "boxen": "^7.1.1",
    "ora": "^7.0.1",
    "commander": "^11.1.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "cosmiconfig": "^9.0.0",
    "picocolors": "^1.0.0",
    "prompts": "^2.4.2",
    "zod": "^3.22.4",
    "fast-glob": "^3.3.2",
    "pretty-ms": "^9.0.0",
    "open": "^10.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/fs-extra": "^11.0.4",
    "@types/prompts": "^2.4.9",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "files": [
    "dist",
    "templates"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
